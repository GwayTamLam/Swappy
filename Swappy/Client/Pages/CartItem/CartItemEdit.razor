@page "/cartitems/edit/{id:int}"
@inject HttpClient _client
@inject NavigationManager _navManager

<h3>Edit</h3>

<CartItemFormComponent ButtonText="Update" OnValidSubmit="EditCartItem" cartitem = "cartitem"/>

@code {
    [Parameter] public int id { get; set; }
    CartItem? cartitem = new CartItem();

    protected async override Task OnParametersSetAsync()
    {
        cartitem = await _client.GetFromJsonAsync<CartItem>($"{Endpoints.CartItemsEndpoint}/{id}");
    }

    async Task EditCartItem()
    {
        await _client.PutAsJsonAsync($"{Endpoints.CartItemsEndpoint}/{id}", cartitem);
        _navManager.NavigateTo("/cartitems/");
    }
}
