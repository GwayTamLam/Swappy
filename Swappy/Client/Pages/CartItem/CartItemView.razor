@page "/cartitems/view/{id:int}"
@inject HttpClient _client
@inject NavigationManager _navManager

<h3>User View</h3>

<CartItemFormComponent cartitem="cartitem" Disabled="true" />

@code {
    [Parameter] public int id { get; set; }
    CartItem? cartitem = new CartItem();
    protected async override Task OnParametersSetAsync()
    {
    cartitem = await _client.GetFromJsonAsync<CartItem>($"{Endpoints.CartItemsEndpoint}/{id}");
    }
}