@page "/categories/create/"
@inject HttpClient _client
@inject NavigationManager _navManager

<h3>Create new categories</h3>

<br />
<ProductFormComponent ButtonText="Create Product" product="product" OnValidSubmit="CreateProduct" />

<EditForm Model="@category" OnValidSubmit="CreateCategory">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label>Name: </label>
        <div>
            <InputText @bind-Value="category.Name" class="form-control" />
            <ValidationMessage For="@(() => category.Name)" />
        </div>
        <label>Description: </label>
        <div>
            <InputText @bind-Value="category.Description" class="form-control" />
            <ValidationMessage For="@(() => category.Description)" />
        </div>
    </div>


    <button type="submit" class="btn btn-success btn-block">
        Create Category
    </button>

</EditForm>

@code {
    Category category = new Category();

    private async Task CreateCategory()
    {
        await _client.PostAsJsonAsync(Endpoints.CategoriesEndpoint, category);
        _navManager.NavigateTo("/categories/");
    }
}
